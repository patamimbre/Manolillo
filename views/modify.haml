		%select.select#tipos{name:"tipo"}
			%option{:value=>@producto.tipo, selected: "selected"}= @producto.tipo.capitalize
			- @productos.tipos.reject{|t| t.eql? @producto.tipo}.each do |tip|
				%option{:value=>tip}= tip.capitalize

